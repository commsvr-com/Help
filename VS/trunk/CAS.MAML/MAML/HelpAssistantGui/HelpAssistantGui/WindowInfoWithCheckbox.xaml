<Window x:Class="HelpAssistantGui.WindowInfoWithCheckbox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WindowInfoWithCheckbox" Height="158" Width="558" ResizeMode="NoResize">
    <Grid Height="126" Width="538">
        <Label Margin="22,12,20,0" Name="labelInfo" Height="24" VerticalAlignment="Top">The link has been copied to clipboard after clicking with the left button on the tree element.</Label>
        <CheckBox HorizontalAlignment="Right" Margin="0,0,1,7" Name="checkBoxDoNotWantToShowAgain" Width="191" Height="16" VerticalAlignment="Bottom">Don't show this message again </CheckBox>
        <Button Margin="128,62,0,41" Name="buttonOk" Click="buttonOk_Click" HorizontalAlignment="Left" Width="83">OK</Button>
        <Button Margin="0,62,128,41" Name="buttonCancel" HorizontalAlignment="Right" Width="83" Click="buttonCancel_Click">Cancel</Button>
    </Grid>
</Window>
